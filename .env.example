# ===========================================
# Configuration LibriAssist - EXEMPLE
# ===========================================
# Copiez ce fichier vers .env et remplissez les valeurs
# NE JAMAIS COMMITER LE FICHIER .env !

# Provider LLM (ollama | groq | mistral)
LLM_PROVIDER=mistral

# Mistral AI Configuration
MISTRAL_API_KEY=your_mistral_api_key_here
MISTRAL_MODEL=mistral-small-latest

# Groq API Configuration (backup)
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.3-70b-versatile

# Ollama Configuration (fallback local)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=mistral:latest

# Database Provider (coollibri | chrono24)
DB_PROVIDER=coollibri

# ===========================================
# DATABASE COOLLIBRI
# ===========================================
COOLLIBRI_DB_HOST=your_server_host
COOLLIBRI_DB_PORT=1433
COOLLIBRI_DB_NAME=your_database_name
COOLLIBRI_DB_USER=your_username
COOLLIBRI_DB_PASSWORD=your_password
COOLLIBRI_DB_DRIVER=ODBC Driver 18 for SQL Server

# ===========================================
# DATABASE CHRONO24
# ===========================================
CHRONO24_DB_HOST=your_server_host
CHRONO24_DB_PORT=1433
CHRONO24_DB_NAME=your_database_name
CHRONO24_DB_USER=your_username
CHRONO24_DB_PASSWORD=your_password
CHRONO24_DB_DRIVER=ODBC Driver 18 for SQL Server
